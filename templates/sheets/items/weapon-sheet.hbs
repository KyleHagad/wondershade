<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64">
    <h1>
      <input type="name" value="{{item.name}}" placeholder="Name" name="name">
    </h1>

    <div class="item-subtitle">
      <h4 class="item-type">{{item.type}}</h4>
    </div>

    <div class="summary">
      <input type="text" name="data.source" value="{{itemData.source}}" placeholder="Summary">
    </div>
  </header>

  <nav class="item-tabs-ctrls tabs" data-group="itemTabs">
    <a class="tab-btn" data-tab="description">
      <div class="flex-row align-center">
        <p class="doubleLabel"> {{ localize 'WonderSystem.Description'}} </p>
      </div>
    </a>
    <a class="tab-btn" data-tab="details">
      <div class="flex-row align-center">
        <p class="doubleLabel"> {{ localize 'WonderSystem.Details'}} </p>
      </div>
    </a>
    <a class="tab-btn" data-tab="effects">
      <div class="flex-row align-center">
        <p class="doubleLabel"> {{ localize 'WonderSystem.Effects'}} </p>
      </div>
    </a>
  </nav>

  <section class="item-tabs">

    <div class="tab" data-group="itemTabs" data-tab="description">

      <div class="flex-section">

        <label for="data.quantity">
          <div class="flex-row">
            <p>Quantity</p>
            <div class="item-description">
              <input type="number" name="data.quantity" value="{{itemData.quantity}}">
            </div>
          </div>
        </label>

      </div>

      <div class="flex-section">
        <label for="data.description.value">

          <div class="item-description">
            <textarea name="data.description.value" placeholder="Description">{{itemData.description.value}}</textarea>
          </div>
        </label>

      </div>
    </div>

    <div class="tab" data-group="itemTabs" data-tab="details">
      <div class="flex-section">

        <label for="data.weight">
          <div class="flex-row">
            <p>Weight</p>
            <div class="item-description">
              <input type="number" name="data.weight" value="{{itemData.weight}}">
            </div>
          </div>
        </label>

        <label for="data.price">
          <div class="flex-row">
            <p>Price</p>
            <div class="item-description">
              <input type="number" name="data.price" value="{{itemData.price}}">
            </div>
          </div>
        </label>

        <label for="data.attunement">
          <div class="flex-row">
            <p>Attunement</p>
            <div class="item-description">
              <input type="number" name="data.attunement" value="{{itemData.attunement}}">
            </div>
          </div>
        </label>

        <label for="data.rarity">
          <div class="flex-row">
            <p>Rarity</p>
            <select
              name="data.rarity"
              class="dark-drop"
              value="{{itemData.rarity}}"
            > {{selectOptions config.html.rarity selected=itemData.rarity nameAttr="value" labelAttr="text"}}
            </select>
          </div>
        </label>

      </div>
    </div>

    <div class="tab" data-group="itemTabs" data-tab="effects"> Effects </div>
  </section>
</form>
